<UserControl x:Class="TMSim.UI.Info"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TMSim.UI"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="800">

    <UserControl.DataContext>
        <Binding Source="{StaticResource sharedViewModel}"/>
    </UserControl.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Border BorderBrush="{Binding InfoMessageColor}" BorderThickness="2" CornerRadius="5" Margin="3" Background="White">
            <Grid Grid.Row="0">
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{Binding InfoMessageColor}" FontSize="14" Text="{Binding InfoMessage}"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
