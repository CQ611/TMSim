<UserControl x:Class="TMSim.UI.Table"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TMSim.UI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <Binding Source="{StaticResource sharedViewModel}"/>
    </UserControl.DataContext>
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">


        <Grid x:Name="TableGrid" Background="White">

            <Grid.RowDefinitions>
                <RowDefinition x:Name="row1" Height="60"/>
                <RowDefinition x:Name="row2" Height="60"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="column1" Width="100"/>
                <ColumnDefinition x:Name="column2" Width="100"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Row="0" Grid.Column="0" BorderBrush="Black" BorderThickness="2">
                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Label Content="TMSim" Grid.Row="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Bottom" FontSize="12"/>
                    <Label Content="Table" Grid.Row="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Top" FontSize="12"/>
                </Grid>
            </Border>

            <Grid x:Name="AddRemoveRow" Grid.Row="1" Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="AddRowButton" Grid.Column="0" Style="{StaticResource AddButtonStyle}" Click="AddRowButton_Click" Margin="10"></Button>
                <Button x:Name="RemoveRowButton" Grid.Column="1" Style="{StaticResource RemoveButtonStyle}" Click="RemoveRowButton_Click" Margin="10"></Button>
            </Grid>

            <Grid x:Name="AddRemoveColumn" Grid.Row="0" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Button x:Name="AddColumnButton" Grid.Row="0" Style="{StaticResource AddButtonStyle}" Click="AddColumnButton_Click"></Button>
                <Button x:Name="RemoveColumnButton" Grid.Row="1" Style="{StaticResource RemoveButtonStyle}" Click="RemoveColumnButton_Click"></Button>
            </Grid>

        </Grid>

    </ScrollViewer>
</UserControl>
