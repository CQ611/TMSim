<Application x:Class="TMSim.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TMSim.UI"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/GeneralButtonStyle.xaml"/>
                <ResourceDictionary Source="Styles/LeftArrowButtonStyle.xaml"/>
                <ResourceDictionary Source="Styles/RightArrowButtonStyle.xaml"/>
                <ResourceDictionary Source="Styles/PauseButtonStyle.xaml"/>
                <ResourceDictionary Source="Styles/StartButtonStyle.xaml"/>
                <ResourceDictionary Source="Styles/StepButtonStyle.xaml"/>
                <ResourceDictionary Source="Styles/StopButtonStyle.xaml"/>
                <ResourceDictionary Source="Styles/ReadWriteHeadStyle.xaml"/>
                <ResourceDictionary Source="Styles/TapeGridStyle.xaml"/>
                <ResourceDictionary Source="Styles/AddButtonStyle.xaml"/>
                <ResourceDictionary Source="Styles/RemoveButtonStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <local:ViewModel x:Key="sharedViewModel" />
        </ResourceDictionary>

    </Application.Resources>
</Application>
