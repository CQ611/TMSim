<Window x:Class="TMSim.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TMSim"
        mc:Ignorable="d"
        Title="TMSim" Height="800" Width="800">
    <Grid>
        <local:Diagram x:Name="diagram"/>
        <Button x:Name="randomize_btn" Content="_Randomize" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Click="randomize_btn_Click"/>
        <Button x:Name="arrange_btn" Content="_Arrange" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top" Width="63" Click="arrange_btn_Click"/>
        <CheckBox x:Name="animate_chk" Content="Animate" HorizontalAlignment="Left" Margin="10,60,0,0" VerticalAlignment="Top" Checked="checkBox_Update" Unchecked="checkBox_Update" Foreground="White"/>
    </Grid>
</Window>
